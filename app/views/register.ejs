<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Registrasi Akun
      </h1>
      <%- include ("./partials/message") %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Nama Lengkap</label>
          <input
            type="name"
            id="name"
            name="name"
            minlength="6"
            class="form-control"
            placeholder="Masukan Nama"
            value="<%= typeof name != 'undefined' ? name : '' %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            inputmode="email"
            class="form-control"
            placeholder="Masukan Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="number">Nomor Telepon Anda</label>
          <input
            type="tel"
            id="number"
            name="number"
            placeholder="08xxxxxxxxxx"
            class="form-control"
            pattern="^\d{12}$"
            required
          />
        </div>
        <div class="form-group">
          <label for="password1">Kata Sandi</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            minlength="8"
            placeholder="Buat Kata Sandi"
            autocomplete="new-password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
            required
          />
          <i class="fas fa-eye btn-show-hide-pwd" data-for="password"></i>
        </div>
        <br />
        <div class="form-group">
          <label for="password2">Konfirmasi Kata Sandi</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            minlength="8"
            autocomplete="current-password"
            placeholder="Konfirmasi Kata Sandi"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            required
          />
          <i class="fas fa-eye btn-show-hide-pwd" data-for="password2"></i>
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Daftar
        </button>
      </form>
      <p class="lead mt-4">Punya Akun? <a href="/users/login">Masuk</a></p>
      <p class="lead mr-5">
        <a href="/"><i class="fas fa-arrow-circle-left fa-2x"></i></a>
      </p>
    </div>
  </div>
</div>
